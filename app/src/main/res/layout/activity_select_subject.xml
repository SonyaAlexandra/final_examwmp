<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Subjects"
            android:textSize="40sp"
            android:textStyle="bold|italic"
            android:layout_gravity="center_horizontal" />

        <CheckBox
            android:id="@+id/subject1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indonesian Language (3 Credits)" />

        <CheckBox
            android:id="@+id/subject2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Science (3 Credits)" />

        <CheckBox
            android:id="@+id/subject3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sports (3 Credits)" />

        <CheckBox
            android:id="@+id/subject4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Art (3 Credits)" />

        <CheckBox
            android:id="@+id/subject5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English (3 Credits)" />

        <CheckBox
            android:id="@+id/subject6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History (3 Credits)" />

        <CheckBox
            android:id="@+id/subject7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geography (3 Credits)" />

        <CheckBox
            android:id="@+id/subject8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Economic (3 Credits)" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>
